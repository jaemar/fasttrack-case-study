<h1>Hi <%= current_user.username %>!</h1>

<% @albums.each do |album| %>
  <div style="float: left; width: 150px; text-align: center; border: 1px solid #000;">
    <% if latest_photo(album.id) %>
      <% @image = image_tag latest_photo(album.id).photo.url(:medium)%>
    <% else %>
      <% @image = image_tag '/images/default_album.gif' %>
    <% end %>
    <p><%= link_to @image, album_path(album.id) %></p>
    <p><%= album.name %></p>
    <p>
    <%= 'Share' %> |
    <%= link_to 'Edit', edit_album_path(album) %> |
    <%= link_to 'Delete', delete_path(album.id), :method => :get %>
    </p>
  </div>
<% end %>

<div style="float: left; width: 100%;">
<%= will_paginate @albums %>
<div>

<div style="float: left; width: 100%;">
  <% @shared.each do |share| %>
    <div style="float: left; width: 150px; text-align: center; border: 1px solid #000;">
      <% if latest_photo(share) %>
        <% @image = image_tag latest_photo(share).photo.url(:medium)%>
      <% else %>
        <% @image = image_tag '/images/default_album.gif' %>
      <% end %>
      <p><%= link_to @image, album_path(share) %></p>
      <p><%= get_album_name(share).name %></p>
    </div>
  <% end %>
</div>