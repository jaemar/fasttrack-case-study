<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Status</th>
  </tr>

<% @user.each do |user| %>
  <% if user.id != current_user.id %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <% @check_status = check_status(current_user.id, user.id) %>
      <% if @check_status %>
        <td><span style="font-style: italic"><%= @check_status.check_status() %></span></td>
      <% else %>
        <td><%= link_to "Invite", invite_path(user.id), :method => :post %></td>
      <% end %>
